import pandas as pd 
import numpy as np 
import matplotlib.pyplot as plt 
data = pd.read_csv('data.txt', header=None) 
x = data.iloc[:, 0]
y = data.iloc[:, 1]
X = np.c_[np.ones((len(x),1)),x]
beta=np.linalg.inv(X.T.dot(X)).dot(X.T).dot(y.values)
plt.scatter(x,y)
plt.plot(x,beta[0]+beta[1]*x,c='black')
plt.show()
